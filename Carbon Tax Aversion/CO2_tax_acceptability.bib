	pages = {97--128},
	file = {Springer Full Text PDF:/home/adrien/Zotero/9ezigv96.default/zotero/storage/JPINHSSL/Carattini et al. - 2017 - Green Taxes in a Post-Paris World Are Millions of.pdf:application/pdf}
