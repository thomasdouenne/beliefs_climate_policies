	journal = {Wiley Interdisciplinary Reviews: Climate Change},
	author = {Baranzini, Andrea and Bergh, Jeroen C. J. M. van den and Carattini, Stefano and Howarth, Richard B. and Padilla, Emilio and Roca, Jordi},
	year = {2017},
	note = {00048},
	pages = {e462},
	file = {Full Text PDF:/home/adrien/Zotero/9ezigv96.default/zotero/storage/FQ4UKLMA/Baranzini et al. - 2017 - Carbon pricing in climate policy seven reasons, c.pdf:application/pdf;Snapshot:/home/adrien/Zotero/9ezigv96.default/zotero/storage/CL9SMJUY/wcc.html:text/html}
}

