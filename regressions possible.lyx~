\begin_layout Subsection
Biais de confirmation
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\Delta A_{i}^{F}=\delta_{0}+\beta_{j}G_{i}+\epsilon_{i}\,|\,\widehat{\Gamma_{i}}=j
\]

\end_inset


