\end_layout

\begin_layout Itemize
\begin_inset Formula $g,G,\gamma,\Gamma,\widehat{\gamma},\widehat{\Gamma}$
\end_inset

: gain from a reform
\end_layout

\begin_layout Itemize
\begin_inset Formula $a/\dot{A}/A$
\end_inset

: approval category (Yes/No/PNR) / approval (Yes) / acceptance (Yes or PNR)
 of a reform
\end_layout

\begin_layout Itemize
\begin_inset Formula $\pi$
\end_inset

: /20/30/40/50/70/ income category of the respondent and their household
\end_layout

\begin_layout Itemize
\begin_inset Formula $R$
\end_inset

 (resp.
 
\begin_inset Formula $R_{2}$
\end_inset

): income of the respondent (resp.
 of their partner)
\end_layout

\begin_layout Itemize
\begin_inset Formula $T$
\end_inset

 (resp.
 
\begin_inset Formula $T_{2}$
\end_inset

): dummy that the respondent (resp.
 their partner) receives a payment in the tax with targeting (
\begin_inset Formula $T=\left(R<c\right)$
\end_inset

)
\end_layout

\begin_layout Itemize
\begin_inset Formula $\Theta$
\end_inset

: payment received as compensation from the tax
\end_layout

\begin_layout Itemize
\begin_inset Formula $\mathbf{C}$
\end_inset

: vector of controls
\end_layout

\begin_layout Itemize
\begin_inset Formula $\mathbf{E}$
\end_inset

: energetic characteristics 
\end_layout

\begin_layout Itemize
\begin_inset Formula $e$
\end_inset

 (resp.
 
\begin_inset Formula $\overline{e}$
\end_inset

): subjective elasticity of the respondent (resp.
 of French people)
\end_layout

\begin_layout Itemize
\begin_inset Formula $\Delta E$
\end_inset

: increase in spending: 
\begin_inset Formula $\Delta E=d\left(\mathbf{E}\right)\cdot\Delta\tau\cdot\left(1-\varepsilon\right)$
\end_inset


\end_layout

